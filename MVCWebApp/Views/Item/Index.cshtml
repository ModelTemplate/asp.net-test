@model MVCWebApp.Models.Item

@{
    ViewData["Title"] = "Items";
}

<h1>List of items</h1>

<div class="text-center">
    <h1 class="display-4">Item</h1>
    <hr />
</div>
<div>
    <dl>
        <dt>Item ID: @Model.ID</dt>
        <dt>Name: @Model.Name</dt>
        <dt>Description: @Model.Description</dt>
        <dt>Cost: @Model.Cost</dt>
        <dt>Depreciation Rate: @Model.DepreciationRate</dt>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {})
    <a asp-action="Index">Back to List</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items) {
        <tr>
            <td>@Html.DisplayFor(item => item.ID)</td>
            <td>@Html.DisplayFor(item => item.Name)</td>
            <td>@Html.DisplayFor(item => item.Description)</td>
            <td>@Html.DisplayFor(item => item.Cost)</td>
            <td>@Html.ActionLink("Details", "Details", new { id=Model.ID })</td>
        </tr>
        }
    </tbody>
    <tr>@Html.ActionLink("Add New Item Entry", "Create", new {})</tr>
</table>
